modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-25_05"

[deployment]
run = ["npm", "start"]
build = ["npm", "run", "build"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 3000

[[ports]]
localPort = 3001

[[ports]]
localPort = 3002

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Run"
author = 46019374
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "next dev -H 0.0.0.0 -p 3001"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[env]
REPLIT_DISABLE_PACKAGE_LAYER = "1"

[agent]
expertMode = true
